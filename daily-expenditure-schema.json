{
  "name": "record_daily_expenditure",
  "description": "Record a dayâ€™s taxpayer-funded recreational and leisure spending (date handled elsewhere).",
  "parameters": {
    "type": "object",
    "required": [
      "location",
      "activities",
      "total_cost",
      "social_description"
    ],
    "properties": {
      "location": {
        "type": "string",
        "description": "Primary venue of the spending."
      },
      "activities": {
        "type": "array",
        "description": "Individual spending items.",
        "items": {
          "type": "object",
          "required": [
            "name",
            "cost",
            "description"
          ],
          "properties": {
            "name": {
              "type": "string",
              "description": "Activity title."
            },
            "cost": {
              "type": "integer",
              "description": "Whole-dollar cost."
            },
            "category": {
              "type": "string",
              "description": "Spending category."
            },
            "description": {
              "type": "string",
              "description": "What the expenditure covered."
            }
          },
          "additionalProperties": false
        },
        "minItems": 1
      },
      "total_cost": {
        "type": "integer",
        "description": "Sum of all activity costs (USD)."
      },
      "social_description": {
        "type": "string",
        "description": "Tweet-ready one-liner."
      },
      "tags": {
        "type": "array",
        "description": "List of tags, lowercase and dasherized",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "confidence_level": {
        "type": "string",
        "description": "Confidence in data accuracy.",
        "enum": [
          "high",
          "medium",
          "low"
        ]
      },
      "source_urls": {
        "type": "array",
        "description": "List of supporting source URLs.",
        "items": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "additionalProperties": false
  }
}
