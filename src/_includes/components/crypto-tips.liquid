<!-- Subtle Support Links -->
<div style="border-top: var(--border-light); margin-top: var(--space-xxl); padding-top: var(--space-lg); text-align: center;">
    <div class="standard-font" style="color: var(--color-text-secondary); font-size: var(--text-caption); margin-bottom: var(--space-md); opacity: 0.7;">
        Support independent accountability journalism
    </div>
    
    <!-- Simple inline links -->
    <div style="display: flex; justify-content: center; gap: var(--space-lg); flex-wrap: wrap; margin-bottom: var(--space-sm);">
        <a href="bitcoin:{{ addr.btc }}?label=Trump%20Taxpayer%20Burden" 
           onclick="event.preventDefault(); showQRImage('/images/qr/btc.svg', 'Bitcoin', '{{ addr.btc }}');"
           style="color: var(--color-text-secondary); font-size: var(--text-caption); text-decoration: none; opacity: 0.6; transition: opacity 0.2s ease;"
           onmouseover="this.style.opacity='1';"
           onmouseout="this.style.opacity='0.6';">
            BTC
        </a>
        <a href="ethereum:{{ addr.eth }}" 
           onclick="event.preventDefault(); showQRImage('/images/qr/eth.svg', 'Ethereum', '{{ addr.eth }}');"
           style="color: var(--color-text-secondary); font-size: var(--text-caption); text-decoration: none; opacity: 0.6; transition: opacity 0.2s ease;"
           onmouseover="this.style.opacity='1';"
           onmouseout="this.style.opacity='0.6';">
            ETH
        </a>
        <a href="solana:{{ addr.sol }}?label=Trump%20Taxpayer%20Burden" 
           onclick="event.preventDefault(); showQRImage('/images/qr/sol.svg', 'Solana', '{{ addr.sol }}');"
           style="color: var(--color-text-secondary); font-size: var(--text-caption); text-decoration: none; opacity: 0.6; transition: opacity 0.2s ease;"
           onmouseover="this.style.opacity='1';"
           onmouseout="this.style.opacity='0.6';">
            SOL
        </a>
        <a href="solana:{{ addr.trump }}?label=Trump%20Taxpayer%20Burden%20-%20TRUMP%20Coin" 
           onclick="event.preventDefault(); showQRImage('/images/qr/trump.svg', 'TRUMP', '{{ addr.trump }}');"
           style="color: var(--color-text-secondary); font-size: var(--text-caption); text-decoration: none; opacity: 0.6; transition: opacity 0.2s ease;"
           onmouseover="this.style.opacity='1';"
           onmouseout="this.style.opacity='0.6';">
            $TRUMP
        </a>
        <a href="dogecoin:{{ addr.doge }}?label=Trump%20Taxpayer%20Burden" 
           onclick="event.preventDefault(); showQRImage('/images/qr/doge.svg', 'Dogecoin', '{{ addr.doge }}');"
           style="color: var(--color-text-secondary); font-size: var(--text-caption); text-decoration: none; opacity: 0.6; transition: opacity 0.2s ease;"
           onmouseover="this.style.opacity='1';"
           onmouseout="this.style.opacity='0.6';">
            DOGE
        </a>
    </div>
</div>

<!-- Simple QR Modal -->
<div id="qr-modal" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.8); z-index: 1000; display: none; align-items: center; justify-content: center;">
    <div style="background: var(--color-bg-primary); border: var(--border-width-thin) solid var(--color-steel-gray); max-width: 400px; width: 90%; padding: var(--space-lg); position: relative; text-align: center; margin: var(--space-lg);">
        <!-- QR Image Display -->
        <div style="margin-bottom: var(--space-lg); display: flex; justify-content: center; align-items: center;">
            <img id="qr-image" src="" alt="QR Code" style="max-width: 100%; height: auto; border: var(--border-width-thin) solid var(--color-steel-gray); display: block;">
        </div>
        
        <!-- Address Display -->
        <div style="background: var(--color-bg-secondary); padding: var(--space-md); margin-bottom: var(--space-lg);">
            <div id="qr-address" class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-detail); word-break: break-all; line-height: 1.4; font-family: 'SF Mono', 'Monaco', 'Menlo', monospace;">
            </div>
        </div>
        
        <!-- Simple actions -->
        <div style="display: flex; gap: var(--space-sm); margin-bottom: var(--space-md);">
            <button onclick="copyQRAddress()" 
                    class="standard-font" 
                    style="flex: 1; background: var(--color-bg-secondary); color: var(--color-text-primary); border: var(--border-width-thin) solid var(--color-steel-gray); padding: var(--space-sm) var(--space-md); font-size: var(--text-detail); cursor: pointer;"
                    onmouseover="this.style.backgroundColor='var(--color-text-primary)'; this.style.color='var(--color-text-inverse)';"
                    onmouseout="this.style.backgroundColor='var(--color-bg-secondary)'; this.style.color='var(--color-text-primary)';">
                Copy Address
            </button>
        </div>
        
        <!-- Close Button -->
        <button onclick="closeQRModal()" 
                style="position: absolute; top: var(--space-md); right: var(--space-md); background: none; border: none; color: var(--color-text-secondary); font-size: 18px; cursor: pointer; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center;"
                onmouseover="this.style.color='var(--color-text-primary)';"
                onmouseout="this.style.color='var(--color-text-secondary)';">
            Ã—
        </button>
    </div>
</div>