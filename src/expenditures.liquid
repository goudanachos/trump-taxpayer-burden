---
pagination:
  data: collections.expenditures
  size: 1
  alias: expenditure
permalink: "/day/{{ expenditure.data.date | date: '%Y/%m/%d' }}/"
---
{% assign exp = expenditure.data %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- SEO Meta Tags -->
    <title>{{ exp.date | date: "%B %-d, %Y" }} - {{ exp.location }} | Trump Taxpayer Burden</title>
    <meta name="description" content="{% if exp.social_description %}{{ exp.social_description | truncate: 155 }}{% else %}On {{ exp.date | date: "%B %-d, %Y" }}, Trump's activities cost taxpayers {{ exp.total_cost | currency }}. Detailed breakdown of presidential leisure expenses.{% endif %}">
    <meta name="keywords" content="Trump, taxpayer cost, {{ exp.date | date: '%Y' }}, presidential expenses, {% for tag in exp.tags %}{{ tag }}, {% endfor %}government spending">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    
    <!-- Performance Optimizations -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css" media="all">
    <link rel="preload" href="/css/main.css" as="style">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} RSS Feed" href="{{ site.url }}/rss.xml">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:title" content="{{ exp.date | date: '%B %-d, %Y' }} - {% if exp.social_title %}{{ exp.social_title }}{% else %}Trump Cost Taxpayers {{ exp.total_cost | currency }}{% endif %}">
    <meta property="og:description" content="{% if exp.social_description %}{{ exp.social_description | truncate: 200 }}{% else %}Detailed breakdown of Trump's taxpayer-funded activities on {{ exp.date | date: '%B %-d, %Y' }} at {{ exp.location }}.{% endif %}">
    <meta property="og:image" content="https://trumptaxburden.com/images/social/day-{{ exp.date }}.svg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:site_name" content="Trump Taxpayer Burden">
    <meta property="article:published_time" content="{{ exp.date | date: '%Y-%m-%d' }}T12:00:00Z">
    <meta property="article:section" content="Government Spending">
    {% for tag in exp.tags %}
    <meta property="article:tag" content="{{ tag }}">
    {% endfor %}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
    <meta property="twitter:title" content="{{ exp.date | date: '%B %-d, %Y' }} - {% if exp.social_title %}{{ exp.social_title }}{% else %}Trump Cost {{ exp.total_cost | currency }}{% endif %}">
    <meta property="twitter:description" content="{% if exp.social_description %}{{ exp.social_description | truncate: 200 }}{% else %}Trump's taxpayer-funded activities on {{ exp.date | date: '%B %-d, %Y' }} at {{ exp.location }}.{% endif %}">
    <meta property="twitter:image" content="https://trumptaxburden.com/images/social/day-{{ exp.date }}.svg">
    <meta property="twitter:site" content="@TaxpayerBurden">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "headline": "{{ exp.date | date: '%B %-d, %Y' }} - Trump Taxpayer Burden: {{ exp.total_cost | currency }}",
      "description": "{% if exp.social_description %}{{ exp.social_description | escape }}{% else %}Detailed breakdown of Trump's taxpayer-funded activities on {{ exp.date | date: '%B %-d, %Y' }} at {{ exp.location }}.{% endif %}",
      "image": "https://trumptaxburden.com/images/social/day-{{ exp.date }}.svg",
      "datePublished": "{{ exp.date | date: '%Y-%m-%d' }}T12:00:00Z",
      "dateModified": "{{ exp.verification.verification_date | date: '%Y-%m-%d' }}T12:00:00Z",
      "author": {
        "@type": "Organization",
        "name": "{{ site.author }}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "{{ site.title }}",
        "logo": {
          "@type": "ImageObject",
          "url": "{{ site.url }}/images/favicon.svg"
        }
      },
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ site.url }}{{ page.url }}"
      },
      "about": {
        "@type": "GovernmentService",
        "name": "Presidential Expenses Tracking"
      }
    }
    </script>
    
    <!-- PWA -->
    <meta name="theme-color" content="#000000">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
</head>
<body class="min-h-screen">
    {% include "components/header.liquid" %}
    
    <main>
        <!-- DAILY DETAIL HEADER -->
        <section style="background: var(--color-bg-command); border-bottom: var(--border-authority); padding: var(--space-xl) var(--space-lg);">
            <div class="max-w-4xl mx-auto">
                <!-- Breadcrumb Navigation -->
                <nav style="margin-bottom: var(--space-lg);" aria-label="Breadcrumb">
                    <div class="standard-font" style="color: var(--color-text-inverse); font-size: var(--text-small); opacity: 0.7;">
                        <a href="/" style="color: inherit; text-decoration: none;">HOME</a>
                        <span style="margin: 0 var(--space-xs);">›</span>
                        <a href="/archive" style="color: inherit; text-decoration: none;">ARCHIVE</a>
                        <span style="margin: 0 var(--space-xs);">›</span>
                        <span>{{ exp.date | date: "%Y" }}</span>
                        <span style="margin: 0 var(--space-xs);">›</span>
                        <span>{{ exp.date | date: "%B %-d" }}</span>
                    </div>
                </nav>
                
                <!-- Date and Location Header -->
                <div style="text-align: center;">
                    <div class="authority-font" style="color: var(--color-text-inverse); font-size: var(--text-detail); margin-bottom: var(--space-sm); opacity: 0.8; letter-spacing: 0.1em;">
                        /// CLASSIFIED: DAILY EXPENDITURE REPORT ///
                    </div>
                    
                    <h1 class="command-font" style="color: var(--color-text-inverse); font-size: var(--text-command); margin-bottom: var(--space-md); text-transform: uppercase; letter-spacing: 0.05em;">
                        {{ exp.date | date: "%A, %B %-d, %Y" }}
                    </h1>
                    
                    <div class="standard-font" style="color: var(--color-text-inverse); font-size: var(--text-standard); margin-bottom: var(--space-md); opacity: 0.9;">
                        <strong>LOCATION:</strong> {{ exp.location }}
                    </div>
                    
                    {% if exp.social_title %}
                    <div class="standard-font" style="color: var(--color-text-inverse); font-size: var(--text-small); margin-bottom: var(--space-lg); opacity: 0.7; font-style: italic; line-height: 1.4;">
                        {{ exp.social_title }}
                    </div>
                    {% endif %}
                    
                    <!-- Cost Display -->
                    <div class="hero-cost-container">
                        <div class="standard-font" style="color: var(--color-text-secondary); font-size: var(--text-detail); margin-bottom: var(--space-sm); text-transform: uppercase; letter-spacing: 0.05em;">
                            TOTAL TAXPAYER COST
                        </div>
                        {% assign day_cost_text = exp.total_cost | currency %}
                        {% assign day_cost_length = day_cost_text | size %}
                        {% if day_cost_length <= 7 %}
                            {% assign day_cost_class = "cost-short" %}
                        {% elsif day_cost_length <= 10 %}
                            {% assign day_cost_class = "cost-medium" %}
                        {% else %}
                            {% assign day_cost_class = "cost-long" %}
                        {% endif %}
                        <div class="hero-cost-display {{ day_cost_class }}" style="color: var(--color-text-alert); padding: 0 var(--space-md);">
                            {{ day_cost_text }}
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- EXPENDITURE DETAILS -->
        <div class="max-w-4xl mx-auto px-4" style="padding: var(--space-xxl) 0;">
            <!-- Social Description -->
            {% if exp.social_description %}
            <div style="background: var(--color-bg-secondary); border: var(--border-light); padding: var(--space-xl); margin-bottom: var(--space-xxl); border-left: 4px solid var(--color-text-alert);">
                <div class="authority-font" style="color: var(--color-text-primary); font-size: var(--text-detail); margin-bottom: var(--space-sm); text-transform: uppercase; letter-spacing: 0.05em;">
                    EXECUTIVE SUMMARY
                </div>
                <p class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-standard); line-height: 1.6; margin: 0;">
                    {{ exp.social_description }}
                </p>
            </div>
            {% endif %}

            <!-- Activities Breakdown -->
            <section style="margin-bottom: var(--space-xxl);">
                <h2 class="authority-font" style="color: var(--color-text-primary); font-size: var(--text-command); margin-bottom: var(--space-lg); text-transform: uppercase; letter-spacing: 0.05em;">
                    ACTIVITY BREAKDOWN
                </h2>
                
                {% for activity in exp.activities %}
                <div style="background: var(--color-bg-primary); border: var(--border-authority); margin-bottom: var(--space-lg); padding: var(--space-xl);">
                    <div style="display: flex; justify-content: between; align-items: start; margin-bottom: var(--space-md);">
                        <h3 class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-standard); font-weight: 700; margin: 0; flex: 1;">
                            {{ activity.name }}
                        </h3>
                        <div class="classification-font" style="color: var(--color-text-alert); font-size: var(--text-large); font-weight: 700; margin-left: var(--space-md);">
                            {{ activity.cost | currency }}
                        </div>
                    </div>
                    
                    {% if activity.description %}
                    <p class="standard-font" style="color: var(--color-text-secondary); font-size: var(--text-standard); line-height: 1.6; margin: 0;">
                        {{ activity.description }}
                    </p>
                    {% endif %}
                    
                    {% if activity.category %}
                    <div style="margin-top: var(--space-md);">
                        <span class="standard-font" style="color: var(--color-text-inverse); background: var(--color-bg-command); font-size: var(--text-small); padding: var(--space-xs) var(--space-sm); text-transform: uppercase; letter-spacing: 0.05em;">
                            {{ activity.category }}
                        </span>
                    </div>
                    {% endif %}
                </div>
                {% endfor %}
            </section>

            <!-- Verification and Sources -->
            {% if exp.verification %}
            <section style="margin-bottom: var(--space-xxl);">
                <h2 class="authority-font" style="color: var(--color-text-primary); font-size: var(--text-command); margin-bottom: var(--space-lg); text-transform: uppercase; letter-spacing: 0.05em;">
                    VERIFICATION & SOURCES
                </h2>
                
                <div style="background: var(--color-bg-secondary); border: var(--border-light); padding: var(--space-xl);">
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--space-lg); margin-bottom: var(--space-lg);">
                        <div>
                            <div class="standard-font" style="color: var(--color-text-secondary); font-size: var(--text-small); margin-bottom: var(--space-xs); text-transform: uppercase;">
                                VERIFIED BY
                            </div>
                            <div class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-standard); font-weight: 600;">
                                {{ exp.verification.verified_by | default: "Government Accountability Project" }}
                            </div>
                        </div>
                        
                        <div>
                            <div class="standard-font" style="color: var(--color-text-secondary); font-size: var(--text-small); margin-bottom: var(--space-xs); text-transform: uppercase;">
                                CONFIDENCE LEVEL
                            </div>
                            <div class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-standard); font-weight: 600; text-transform: uppercase;">
                                {{ exp.verification.confidence_level | default: "Medium" }}
                            </div>
                        </div>
                        
                        {% if exp.verification.verification_date %}
                        <div>
                            <div class="standard-font" style="color: var(--color-text-secondary); font-size: var(--text-small); margin-bottom: var(--space-xs); text-transform: uppercase;">
                                VERIFIED DATE
                            </div>
                            <div class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-standard); font-weight: 600;">
                                {{ exp.verification.verification_date | date: "%B %-d, %Y" }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    
                    {% if exp.source_urls %}
                    <div>
                        <div class="standard-font" style="color: var(--color-text-secondary); font-size: var(--text-small); margin-bottom: var(--space-md); text-transform: uppercase;">
                            OFFICIAL SOURCES
                        </div>
                        <div style="display: grid; gap: var(--space-sm);">
                            {% for source in exp.source_urls %}
                            <a href="{{ source }}" target="_blank" rel="noopener" class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-standard); text-decoration: none; padding: var(--space-sm); border: var(--border-light); background: var(--color-bg-primary); display: flex; align-items: center; gap: var(--space-sm); transition: all 0.2s ease;"
                               onmouseover="this.style.backgroundColor='var(--color-bg-command)'; this.style.color='var(--color-text-inverse)';"
                               onmouseout="this.style.backgroundColor='var(--color-bg-primary)'; this.style.color='var(--color-text-primary)';">
                                {% assign domain = source | replace: 'https://', '' | replace: 'http://', '' | replace: 'www.', '' | split: '/' | first %}
                                {% if domain contains 'nytimes' %}
                                    {% render 'icons/nytimes' %}
                                {% elsif domain contains 'cnn' %}
                                    {% render 'icons/cnn' %}
                                {% elsif domain contains 'foxnews' %}
                                    {% render 'icons/foxnews' %}
                                {% elsif domain contains 'reuters' %}
                                    {% render 'icons/reuters' %}
                                {% elsif domain contains 'apnews' %}
                                    {% render 'icons/apnews' %}
                                {% elsif domain contains 'cnbc' %}
                                    {% render 'icons/cnbc' %}
                                {% else %}
                                    {% render 'icons/generic-news' %}
                                {% endif %}
                                <span style="flex: 1;">{{ domain }}</span>
                                <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5"/>
                                    <path d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z"/>
                                </svg>
                            </a>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </section>
            {% endif %}

            <!-- Tags -->
            {% if exp.tags %}
            <section style="margin-bottom: var(--space-xxl);">
                <h2 class="authority-font" style="color: var(--color-text-primary); font-size: var(--text-command); margin-bottom: var(--space-lg); text-transform: uppercase; letter-spacing: 0.05em;">
                    CLASSIFICATION TAGS
                </h2>
                
                <div style="display: flex; flex-wrap: wrap; gap: var(--space-sm);">
                    {% for tag in exp.tags %}
                    <span class="standard-font" style="color: var(--color-text-inverse); background: var(--color-bg-command); font-size: var(--text-small); padding: var(--space-xs) var(--space-sm); text-transform: uppercase; letter-spacing: 0.05em; border: var(--border-width-thin) solid var(--color-bg-command);">
                        {{ tag }}
                    </span>
                    {% endfor %}
                </div>
            </section>
            {% endif %}

            <!-- Navigation -->
            <section style="border-top: var(--border-authority); padding-top: var(--space-lg);">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <a href="/archive" class="standard-font" style="color: var(--color-text-primary); font-size: var(--text-standard); text-decoration: none; padding: var(--space-sm) var(--space-lg); border: var(--border-authority); background: var(--color-bg-secondary); text-transform: uppercase; letter-spacing: 0.05em; font-weight: 600; transition: all 0.2s ease;"
                       onmouseover="this.style.backgroundColor='var(--color-text-primary)'; this.style.color='var(--color-text-inverse)';"
                       onmouseout="this.style.backgroundColor='var(--color-bg-secondary)'; this.style.color='var(--color-text-primary)';">
                        ← VIEW ALL RECORDS
                    </a>
                    
                    <div style="display: flex; gap: var(--space-sm);">
                        <!-- Social Share Buttons -->
                        <button onclick="shareOnTwitter()" class="standard-font" style="color: var(--color-text-inverse); background: #1DA1F2; font-size: var(--text-small); padding: var(--space-xs) var(--space-sm); border: none; text-transform: uppercase; letter-spacing: 0.05em; font-weight: 600; cursor: pointer; transition: opacity 0.2s ease;"
                                onmouseover="this.style.opacity='0.8';"
                                onmouseout="this.style.opacity='1';">
                            SHARE ON X
                        </button>
                        
                        <button onclick="copyLink()" class="standard-font" style="color: var(--color-text-primary); background: var(--color-bg-secondary); font-size: var(--text-small); padding: var(--space-xs) var(--space-sm); border: var(--border-authority); text-transform: uppercase; letter-spacing: 0.05em; font-weight: 600; cursor: pointer; transition: all 0.2s ease;"
                                onmouseover="this.style.backgroundColor='var(--color-text-primary)'; this.style.color='var(--color-text-inverse)';"
                                onmouseout="this.style.backgroundColor='var(--color-bg-secondary)'; this.style.color='var(--color-text-primary)';">
                            COPY LINK
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </main>
    
    {% include "components/footer.liquid" %}
    
    <script>
        function shareOnTwitter() {
            const text = "{{ exp.date | date: '%B %-d, %Y' }} - {% if exp.social_title %}{{ exp.social_title }}{% else %}Trump cost taxpayers {{ exp.total_cost | currency }}{% endif %} {% if exp.social_description %}{{ exp.social_description | truncate: 100 | escape }}{% endif %}";
            const url = "{{ site.url }}{{ page.url }}";
            const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}&hashtags=TrumpTaxBurden,TaxpayerMoney`;
            window.open(twitterUrl, '_blank', 'width=550,height=420');
        }
        
        function copyLink() {
            navigator.clipboard.writeText("{{ site.url }}{{ page.url }}").then(() => {
                const button = event.target;
                const originalText = button.textContent;
                button.textContent = 'COPIED!';
                setTimeout(() => {
                    button.textContent = originalText;
                }, 2000);
            });
        }
    </script>
</body>
</html>